<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewUserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_cad_usu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="CADASTRO DE USUÁRIO"
            android:textColor="#090808"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ProgressBar
            android:id="@+id/progressBarNewUser"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <TableRow>

        <TextView
            android:id="@+id/nome"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Nome:"
            android:textColor="#090808"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nomeCompleto"
            android:layout_width="274dp"
            android:width="240px"
            android:inputType="text" />

    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/dt_nasc"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Nascimento:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nascimento"
            android:inputType="date" />
    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/email"
            android:fontFamily="serif"
            android:text="Email:"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText android:id="@+id/Email"
            android:inputType="textEmailAddress"/>
    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/senha"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Senha:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText android:id="@+id/Senha"
            android:inputType="textPassword"/>
    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/telefone"
            android:fontFamily="serif"
            android:text="Telefone:"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" />

        <EditText android:id="@+id/campotelefone"
            android:inputType="phone"/>
    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/ocupacao"
            android:fontFamily="serif"
            android:text="Ocupação:"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText android:id="@+id/campoocupacao"
            android:inputType="text"/>
    </TableRow>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/cor_botao"
            android:fontFamily="serif"
            android:onClick="btSalvar"
            android:shadowColor="#12B2CE"
            android:text="Salvar"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>
</TableLayout>